<div class="card">
  <div class="card-body">
<%= form_with(model: teller, local: true) do |form| %>
  <% if teller.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(teller.errors.count, "error") %> prohibited this teller from being saved:</h2>

      <ul>
        <% teller.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id, value: current_user&.id %>

  <div class="form-group">
    <%= form.label :year %>
    <%= form.number_field :year, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :month %>
    <%= form.select :month, options_for_select((1..12).to_a), {}, class: "form-input" %>
  </div>
  
  <div class="form-group">
    <%= form.label :cash_in %>
    <%= form.number_field :cash_in %>
  </div>

  <div class="form-group">
    <%= form.label :cash_out %>
    <%= form.number_field :cash_out %>
  </div>

  <div class="form-group">
    <%= form.label :company_id %>
    <%= form.select :company_id, options_from_collection_for_select(current_user.companies, :id, :name) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
  </div>
</div>

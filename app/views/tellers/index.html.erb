<p id="notice"><%= notice %></p>

<% if Country.count.zero? %>

  <div class="d-flex justify-content-center">
    <h1>You do not have any country</h1>
  </div>
  <div class="d-flex justify-content-center">
    <h2>Company needs a country (requirement 4.)</h2>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "Let's create a Country", new_country_path, class: "btn btn-primary" %>
  </div>

<% elsif current_user.companies.count.zero? %>

  <div class="d-flex justify-content-center">
    <h1>We need a company, at least</h1>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "Let's create a Company", new_company_path, class: "btn btn-primary" %>
  </div>

<% else %>

<h1>Tellers</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Opening</th>
      <th>Cash in</th>
      <th>Cash out</th>
      <th>Company</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tellers.each do |teller| %>
      <tr>
        <td><%= teller.date %></td>
        <td><%= teller.opening %></td>
        <td><%= teller.cash_in %></td>
        <td><%= teller.cash_out %></td>
        <td><%= teller.company_name %></td>
        <td><%= teller.country_name %></td>
        <td><%= link_to 'Show', teller %></td>
        <td><%= link_to 'Edit', edit_teller_path(teller) %></td>
        <td><%= link_to 'Destroy', teller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teller', new_teller_path %>

<% end %>
